#!/bin/sh

erl=`which erl`
if [ -z "${erl}" ]; then
    >&2 echo "Could not find erl in path!"
    exit 1
fi

usage () {
    >&2 echo "mkconfig <CERTIFICATE-FILE> square | circle | epfl | roma | it | mesh"
    exit 100
}

if [ $# -ne 2 ]; then
   usage
fi

case $2 in
    square | circle | epfl | roma | it | mesh)
        ;;
    *)
        usage
        ;;
esac


bin_dir=${0%/*}
erl_libs=${bin_dir}/../..
pa="-pa ${erl_libs}/*/ebin"

env ERL_LIBS=${erl_libs} ${erl} ${pa} -noshell -run simulator_mkconfig start $1 $2
